LIBRARY IEEE;
USE IEEE.STD_LOGIC_1164.ALL;

ENTITY Road_Events IS
 PORT(DIN : IN STD_LOGIC_VECTOR(2 DOWNTO 0);
		CLK : IN STD_LOGIC;
      Q   : OUT STD_LOGIC_VECTOR(1 DOWNTO 0));
END Road_Events;

ARCHITECTURE BEHAV OF Road_Events IS
 BEGIN
 PROCESS(CLK)
  BEGIN
   IF CLK'EVENT AND CLK = '1' THEN
    CASE DIN IS
     WHEN "000"=> Q <="00";
	  WHEN "001"=> Q <="01";
	  WHEN "010"=> Q <="00";
	  WHEN "011"=> Q <="10";
	  WHEN "1XX"=> Q <="11";
	  WHEN OTHERS => Q <="11";
    END CASE;
   END IF;
 END PROCESS;
END BEHAV;